#!/bin/bash -e

# Remove potential PID file leftovers
if [ -f /app/tmp/pids/server.pid ]; then
  rm /app/tmp/pids/server.pid
fi

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
fi

if [ "$BETA_STANDARDS_NUKE_EVALUATIONS_ON_RESTART" = "true" ]; then
    echo "--- Deleting all audits... (because of BETA_STANDARDS_NUKE_EVALUATIONS_ON_RESTART=true)"
    rails r 'Evaluation.delete_all'
    echo "--- ... done deleting audits."
fi

exec "${@}"
